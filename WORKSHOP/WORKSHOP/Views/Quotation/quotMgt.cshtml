@{
    ViewBag.Title = "quotMgt";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section stMain {
    <script type="text/javascript" src="~/Scripts/js/Admin/_quotMgt.js"></script>
    <style>
        .easy_q {
            margin: 0 auto;
            background-color: #f6bc5a;
            color: white;
            height: 27px;
