@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_subLayout.cshtml";
}

@section Container {
    <style>
        #html_editor{margin:0 auto;}

        .editor_title_box{padding-bottom:20px;}
        .editor_title_box > input:first-child{width:20%; margin-bottom:10px;}
        .editor_title_box > input{width:100%; border:1px solid #ddd; padding:5px 10px;}
        .save_editor{text-align:right; padding-top:20px; display:flex; justify-content:flex-end;}
        .secret_wrap{display:flex; position:relative; align-items:center;}
        .secret_wrap .sort_radio{display:flex; align-items:center; padding-right:10px;}
        .secret_wrap .sort_radio span{padding-right:10px;}
        .secret_wrap .sort_radio .use{padding-right:5px;}
        .secret_wrap .del_pw_box{left:0; top:130%; width:192px; height:32px;}
        .secret_write{display:flex; align-items:center; padding-right:20px;}
        .secret_write > span{padding-right:20px;}
        .secret_write > label{padding-right:10px; cursor:pointer;}
        /*.secret_write input{accent-color:unset;}*/
        .save_editor > button{padding:10px 30px; background:#00c4bd; color:#fff; font-weight:500; border-radius:5px;}
        input[type="radio"][name="secret"] {display: none;}
        .custom-radio {display: inline-block; width: 12px; height: 12px; border: 1px solid #9c9c9c; border-radius: 50%; padding:0; position:relative; top:1px;}
        .custom-radio.on{background:#006e6a;}
    </style>
    <div class="content">
        <div class="main_visual">
            <img src="~/Images/estimate_visual.png" class="pc" />
            <img src="/Images/main_visual_m.png" class="mo">
        </div>
        <div class="main_title" style="font-size: 60px; font-weight:600; color: #fff; text-shadow: 0px 1px 4px rgba(0, 0, 0, 0.3);">
            커뮤니티
        </div>
    </div>
    <div class="container">
        <div class="common_width editor_padding">
            <div class="editor_title_box">
                <input type="text" placeholder="닉네임" id="Comm_Name" maxlength="20"/>
                <input type="text" placeholder="제목" id="Comm_Title" maxlength="200"/>
            </div>
            <div class="" id="html_editor"></div>
            <div class="save_editor">
                <div class="secret_wrap">
                    <div class="sort_radio">
                        <span>비밀글 여부</span>
                        <div class="use">
                            <input type="radio" id="use" value="Y" style="cursor:pointer;"/>
                            <label for="use" style="cursor:pointer;">사용</label>
                        </div>
                        <div>
                            <input type="radio" id="notuse" value="N" style="cursor:pointer;" checked/>
                            <label for="notuse" style="cursor:pointer;">사용안함</label>
                        </div>
                    </div>
                    @*<div class="secret_write">
            <span>비밀글 여부</span>
            <label>
                <input type="radio" id="" name="secret" value="Y">
                <span for="secret" class="custom-radio"></span>사용
            </label>
            <label>
                <input type="radio" id="" name="secret" value="N">
                <span for="secret" class="custom-radio"></span>사용안함
            </label>
        </div>*@
                    <div class="del_pw_box">
                        <div class="del_pw_area">
                            <input type="password" placeholder="비밀번호" id="Regi_pwd" maxlength="20"/>
                            <button type="button" id="DelComment">확인</button>
                            <button type="button" id="ClosePw">
                                <img src="~/Images/close_pw.png" />
                            </button>
                        </div>
                    </div>
                </div>
                <button type="button" id="Comm_Save">저장</button>
            </div>
        </div>
    </div>
    <script src="~/Scripts/js/CommunityRegist/CommunityRegist.js"></script>
}
