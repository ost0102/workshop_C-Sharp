@{
    ViewBag.Title = "admin";
    ViewBag.Sub = "member";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section stMain {
    @*<script type="text/javascript" src="/Scripts/admin/_Memberwrite.js"></script>*@

    @{
        if (ViewBag.USR_ID != null)
        {
            <input type="hidden" id="View_MEMB_NO" value="@ViewBag.MEMB_NO" />
            <input type="hidden" id="View_M_ID" value="@ViewBag.M_ID" />
            <input type="hidden" id="View_LVL" value="@ViewBag.LVL" />
            <input type="hidden" id="View_AUTH_LEVEL" value="@ViewBag.AUTH_LEVEL" />
            <input type="hidden" id="View_STATUS" value="@ViewBag.STATUS" />
            <input type="hidden" id="View_M_NAME" value="@ViewBag.M_NAME" />
            <input type="hidden" id="View_MOBILE" value="@ViewBag.MOBILE" />
            <input type="hidden" id="View_REGDT" value="@ViewBag.REGDT" />
            <input type="hidden" id="View_LAST_LOGIN" value="@ViewBag.LAST_LOGIN" />
        }
        else
        {
            <input type="hidden" id="View_MEMB_NO" value="" />
        }


    }

    <div class="st-main">
        <div class="st-header">
            <div class="fluid-cols">
                <div class="min-col">
                    <div class="st-header__menu">
                        <button class="btn st-sidebar__toggle"><i class="fa fa-bars"></i></button>
                    </div>
                </div>
                <div class="expand-col text-ellipsis">
                    <div class="st-header__title"><span>관리자 정보</span></div>
                </div>
            </div>
        </div>

        <div class="st-content mb50 max_width">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="st-panel">
                            <div class="st-panel__cont">
                                <div class="st-panel__content ">
                                    <form action="/Admin/MemberModify" id="insert_form" name="insert_form" method="post" enctype="multipart/form-data">

                                        @{
                                            if (ViewBag.MEMB_NO != null)
                                            {
                                                <input type="hidden" id="memb_no" name="memb_no" value="@ViewBag.MEMB_NO">
                                                <input type="hidden" id="use_yn" name="use_yn" value="">
                                                <input type="hidden" id="del_flag" name="del_flag" value="">
                                            }
                                            else
                                            {
                                                <input type="hidden" id="memb_no" name="memb_no" value="">
                                                <input type="hidden" id="use_yn" name="use_yn" value="">
                                                <input type="hidden" id="del_flag" name="del_flag" value="">
                                            }
                                        }

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">기본 정보 입력</div>
                                                    <!-- panel-body -->
                                                    <div class="panel-body">
                                                        <div class="form-group col-md-12">
                                                            <div class="col-md-4 pd0">
                                                                <label>아이디</label>
                                                                @{
                                                                    if (ViewBag.MEMB_NO != null)
                                                                    {
                                                                        <p class="form-control-static">@ViewBag.M_ID</p>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="btn-group pull-right" role="group" aria-label="...">
                                                                            <a href="javascript:void(0);" type="button" class="btn btn-primary btn-xs" id="id_check"> 중복확인</a>
                                                                        </span>
                                                                        <input class="form-control" id="m_id" name="m_id">
                                                                        <p id="error_id" style="color:red;"></p>
                                                                    }
                                                                }
                                                            </div>
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            <div class="col-md-4 pd0">
                                                                <label>비밀번호</label>
                                                                <input class="form-control" type="password" id="password" name="password">
                                                                <p>비밀번호는 4~26자리, 대소문자 구분 합니다.</p>

                                                                @{
                                                                    if (ViewBag.MEMB_NO != null)
                                                                    {
                                                                        <p style="color:red">입력이 없으면 비밀번호는 변경되지 않습니다. </p>
                                                                    }
                                                                }

                                                            </div>
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            <div class="col-md-3 pd0">
                                                                <label>성명</label>

                                                                @{
                                                                    if (ViewBag.M_NAME != null)
                                                                    {
                                                                        <input class="form-control" type="text" id="name" name="name" value="@ViewBag.M_NAME">
                                                                    }
                                                                    else
                                                                    {
                                                                        <input class="form-control" type="text" id="name" name="name" value="">
                                                                    }
                                                                }

                                                            </div>
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            <div class="col-md-6 pd0">
                                                                <label>핸드폰</label>
                                                                <div class="form-group input-group">
                                                                    <div class="input-group col-md-10">
                                                                        @{
                                                                            if (ViewBag.MOBILE != null)
                                                                            {
                                                                                if (ViewBag.MOBILE1 != null)
                                                                                {
                                                                                    <input type="text" class="form-control" id="mobile1" name="mobile1" value="@ViewBag.MOBILE1">
                                                                                }
                                                                                else
                                                                                {
                                                                                    <input type="text" class="form-control" id="mobile1" name="mobile1" value="">
                                                                                }

                                                                                <span class="input-group-addon no_bg px20 im_pd0">-</span>

                                                                                if (ViewBag.MOBILE2 != null)
                                                                                {
                                                                                    <input type="text" class="form-control" id="mobile2" name="mobile2" value="@ViewBag.MOBILE2">
                                                                                }
                                                                                else
                                                                                {
                                                                                    <input type="text" class="form-control" id="mobile2" name="mobile2" value="">
                                                                                }
                                                                                <span class="input-group-addon no_bg px20 im_pd0">-</span>
                                                                                if (ViewBag.MOBILE3 != null)
                                                                                {
                                                                                    <input type="text" class="form-control" id="mobile3" name="mobile3" value="@ViewBag.MOBILE3">
                                                                                }
                                                                                else
                                                                                {
                                                                                    <input type="text" class="form-control" id="mobile3" name="mobile3" value="">
                                                                                }
                                                                            }
                                                                            else
                                                                            {
                                                                                <input type="text" class="form-control" id="mobile1" name="mobile1" value="">
                                                                                <span class="input-group-addon no_bg px20 im_pd0">-</span>
                                                                                <input type="text" class="form-control" id="mobile2" name="mobile2" value="">
                                                                                <span class="input-group-addon no_bg px20 im_pd0">-</span>
                                                                                <input type="text" class="form-control" id="mobile3" name="mobile3" value="">
                                                                            }
                                                                        }

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- /.panel-body -->
                                                </div>
                                                <!-- /.panel -->
                                            </div>
                                        </div>
                                    </form>
                                    <div class="mb20"></div>
                                    <!--	/.기본 레이아웃	-->
                                    <div class="row">
                                        <div class="col-md-5 col-md-offset-5 paging">

                                            @{
                                                if (ViewBag.MEMB_NO != null)
                                                {
                                                    <a href="javascript:void(0);" type="button" id="Modify_Member" class="btn btn-primary _btn_reg"><i class="fa fa-pencil-square-o"></i> 수정</a>
                                                    @Html.Raw("&nbsp;")
                                                    @Html.Raw("&nbsp;")
                                                    <a href="javascript:void(0);" type="button" id="Member_Delete" class="btn btn-primary _btn_del" data-val="1"><i class="fa fa-th-list"></i> 삭제</a>
                                                    @Html.Raw("&nbsp;")
                                                    @Html.Raw("&nbsp;")
                                                }
                                                else
                                                {
                                                    <a href="javascript:void(0);" type="button" id="Insert_Member" class="btn btn-primary _btn_reg"><i class="fa fa-pencil-square-o"></i> 등록</a>
                                                    @Html.Raw("&nbsp;")
                                                    @Html.Raw("&nbsp;")
                                                }
                                            }

                                            <a href="@Url.Action("Member", "Admin")" type="button" class="btn btn-primary _btn_list"><i class="fa fa-th-list"></i> 목록</a>
                                            @Html.Raw("&nbsp;")
                                            @Html.Raw("&nbsp;")

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="st-footer">
            <div class="copyright">
                Copyrightⓒ 관리자 모드. All right reserved.
            </div>
        </div>
    </div>

    <div class="layer_zone alert_type" id="Member_Confirm">
        <div class="layer_wrap">
            <div class="layer_inwrap">
                <article class="layer_cont">
                    <div class="layer_tit">
                        <h1 class="tit"></h1>
                    </div>
                    <!-- alert_cont -->
                    <div class="alert_cont">
                        <div class="inner">
                            데이터가 삭제 되었습니다.
                        </div>
                    </div>
                    <!-- //alert_cont -->
                    <!-- btn_w -->
                    <div class="btn_w">
                        <button type="button" class="btns radius cr2" id="Layer_Confirm_Cencel">취소</button>
                        <button type="button" class="btns radius cr1" id="Layer_Confirm">확인</button>
                    </div>
                    <!-- //btn_w -->
                </article>
            </div>
        </div>
    </div>

    <div class="layer_zone alert_type" id="layer_complete_alert">
        <div class="layer_wrap">
            <div class="layer_inwrap">
                <article class="layer_cont">
                    <div class="layer_tit">
                        <h1 class="tit"></h1>
                    </div>
                    <!-- alert_cont -->
                    <div class="alert_cont">
                        <div class="inner">
                            데이터가 삭제 되었습니다.
                        </div>
                    </div>
                    <!-- //alert_cont -->
                    <!-- btn_w -->
                    <div class="btn_w">
                        <button type="button" class="btns radius cr1 loginChk" id="btn_save_complete" onclick="layerClose('#alert01');">확인</button>
                    </div>
                    <!-- //btn_w -->
                </article>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/js/Admin/_memberwrite.js")
}
