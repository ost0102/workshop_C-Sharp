@{
    ViewBag.Title = "admin";
    ViewBag.Sub = "CommonCode";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section stMain {
    <style>
        #GroupList {
            height: 330px;
        }
        #CommonList {
            height: 530px;
        }

    </style>

    <!-- DevExtreme theme -->

    <script type="text/javascript" src="~/Scripts/js/Admin/_commonCode.js"></script>


    <div class="st-main">
        <div class="st-header">
            <div class="fluid_cols">
                <div class="min_col">
                    <div class="st-header__menu">
                        <button class="btn st-sidebar__toggle"><i class="fa fa-bars"></i></button>
                    </div>
                </div>
                <div class="expand-col text-ellipsis">
                    <div class="st-header__title">
                        <span>공통코드 관리</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="st-content mb50 max_width">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-15">
                        <div class="st-panel">
                            <div class="search-panel">
                                <div class="ad_label">그룹명</div>
                                <div class="sch_input" id="GRP_NM"></div>
                                <div id="btnSearch"></div>
                            </div>
                            <div id="GroupList"></div>
                            <div id="CommonList"></div>
                            <div id="docUploadForm"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="st-footer">
            <div class="copyright">
                Copyrightⓒ 관리자 모드. All right reserved.
            </div>
        </div>

    </div>

}
