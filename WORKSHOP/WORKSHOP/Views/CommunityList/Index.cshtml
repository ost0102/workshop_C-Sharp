@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_subLayout.cshtml";
}

@section Container {
    <div class="content">
        <div class="main_visual">
            <img src="~/Images/estimate_visual.png" class="pc" />
            <img src="/Images/main_visual_m.png" class="mo">

        </div>
        <div class="main_title" style="font-size: 60px; font-weight:600; color: #fff; text-shadow: 0px 1px 4px rgba(0, 0, 0, 0.3);">
