                                            <li>
                                                <a href="javascript:;" class="next-last"><span>At the very end</span></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/js/CommunityList/CommunityList.js"></script>
